	Если 0 <= ТекущиеДела_Индекс И ТекущиеДела_Индекс < ВГраницаИндекса Тогда
		ИндексТекущиеДела = ТекущиеДела_Индекс + 1;
	Иначе
		ИндексТекущиеДела = 0;
	КонецЕсли;
	
