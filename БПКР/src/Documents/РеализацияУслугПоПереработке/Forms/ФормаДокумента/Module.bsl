		СтруктураДанные.Вставить("Дата", ДатаДокумента);
		СтруктураДанные.Вставить("ДоговорКонтрагента", Объект.ДоговорКонтрагента);
		СтруктураДанные.Вставить("ВалютаДокумента", Объект.ВалютаДокумента);

		СтруктураДанные = ПолучитьДанныеНоменклатураПриИзменении(СтруктураДанные);
		
		НоваяСтрокаТабличнойЧасти.Цена = ?(СтруктураДанные.Цена = 0, НоваяСтрокаТабличнойЧасти.Цена, СтруктураДанные.Цена);
		НоваяСтрокаТабличнойЧасти.СчетУчета = СтруктураДанные.СчетУчета;
		НоваяСтрокаТабличнойЧасти.СчетДоходов = СтруктураДанные.СчетДоходов;
		НоваяСтрокаТабличнойЧасти.СчетРасходов = СтруктураДанные.СчетРасходов;
		НоваяСтрокаТабличнойЧасти.СтатьяДоходов = СтруктураДанные.СтатьяДоходов;
		НоваяСтрокаТабличнойЧасти.СтатьяРасходов = СтруктураДанные.СтатьяРасходов;
		
		УслугиДобавлены = Истина;
    КонецЦикла;
	
	Если УслугиДобавлены Тогда
        Модифицированность = Истина;
    КонецЕсли;
	
КонецПроцедуры
