// Получает набор данных с сервера для процедуры ДатаПриИзменении.
//
&НаСервере
Функция ПолучитьДанныеДатаПриИзменении(ДатаПередИзменением)
	РазностьДат = БухгалтерскийУчетСервер.ПроверитьНомерДокумента(Объект.Ссылка, Объект.Дата, ДатаПередИзменением);
	
	СтруктураДанные = Новый Структура;
	СтруктураДанные.Вставить("РазностьДат",	РазностьДат);
	
	Возврат СтруктураДанные;
КонецФункции // ПолучитьДанныеДатаПриИзменении()

// Получает набор данных с сервера для процедуры ОСПриИзменении.
//
&НаСервереБезКонтекста
Функция ПолучитьДанныеОСПриИзменении(СтруктураДанные)
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ПараметрыУчетаОСВАрендеСрезПоследних.Организация КАК Организация,
		|	ПараметрыУчетаОСВАрендеСрезПоследних.ОсновноеСредство КАК ОсновноеСредство,
		|	ПараметрыУчетаОСВАрендеСрезПоследних.СчетУчета КАК СчетУчета,
		|	ПараметрыУчетаОСВАрендеСрезПоследних.ГруппаНУ КАК ГруппаНУ,
		|	ПараметрыУчетаОСВАрендеСрезПоследних.Контрагент КАК Контрагент
		|ИЗ
		|	РегистрСведений.ПараметрыУчетаОСВАренде.СрезПоследних(
		|			&Дата,
		|			Организация = &Организация
		|				И ОсновноеСредство = &ОсновноеСредство) КАК ПараметрыУчетаОСВАрендеСрезПоследних
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ РегистрСведений.СостоянияОСВАренде.СрезПоследних КАК СостоянияОСВАрендеСрезПоследних
		|		ПО ПараметрыУчетаОСВАрендеСрезПоследних.Организация = СостоянияОСВАрендеСрезПоследних.Организация
		|			И ПараметрыУчетаОСВАрендеСрезПоследних.ОсновноеСредство = СостоянияОСВАрендеСрезПоследних.ОсновноеСредство
		|ГДЕ
		|	СостоянияОСВАрендеСрезПоследних.Состояние = &Состояние";
	
	Запрос.УстановитьПараметр("Дата", СтруктураДанные.Период);
	Запрос.УстановитьПараметр("Организация", СтруктураДанные.Организация);
	Запрос.УстановитьПараметр("ОсновноеСредство", СтруктураДанные.ОсновноеСредство);
	Запрос.УстановитьПараметр("Состояние", Перечисления.ВидыСостоянийОСВАренде.Поступило);
	
	СтруктураДанные.Вставить("СчетУчета");
	СтруктураДанные.Вставить("ГруппаНУ");
	СтруктураДанные.Вставить("Контрагент");

	РезультатЗапроса = Запрос.Выполнить();	
	ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
	
	Если ВыборкаДетальныеЗаписи.Следующий() Тогда 
		ЗаполнитьЗначенияСвойств(СтруктураДанные, ВыборкаДетальныеЗаписи);
	Иначе 
		ТекстСообщения = СтрШаблон(НСтр("ru = 'Данного ОС в аренде нет.'"));
		ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, , "Объект.ОС", , );
	КонецЕсли;
				
	Возврат СтруктураДанные;
	
КонецФункции // ПолучитьДанныеОСПриИзменении()

